# ===== EJEMPLO DE CONFIGURACIÓN FRONTEND - DonaCrypto =====
# Copia este archivo como .env y configura tus valores

# ===== API CONFIGURATION =====
# Para desarrollo local
VITE_API_BASE_URL=http://localhost:5000

# Para producción (Render)
# VITE_API_BASE_URL=https://your-backend.onrender.com

# ===== APPLICATION CONFIGURATION =====
VITE_APP_NAME=DonaCrypto
VITE_APP_TITLE=DonaCrypto
VITE_APP_DESCRIPTION=Plataforma descentralizada de donaciones
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# ===== FEATURE FLAGS =====
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ===== QR CODE CONFIGURATION =====
VITE_QR_ERROR_CORRECTION_LEVEL=M
VITE_QR_MARGIN=4
VITE_QR_WIDTH=256
